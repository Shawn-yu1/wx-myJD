.show{
  width:100%;
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}
.show .name{
  width:200rpx;
  font-size: 22rpx;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-word;
}
.show .shoppic{
  width:150rpx;
  height:150rpx;
}
.pirce{
  color:red;
}
.control{
  width:150rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom:0;
  right:50rpx;
}
.numbers{
  width:60rpx;
  text-align: center;
}
.control .numbers{
  display: inline-block;
  width:50rpx;
  height:100%;
}
.control image{
  width:30rpx;
  height: 30rpx;
}
.end{
  width:100%;
  height:100rpx;
  display: flex;
  background:black;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom:0;
  color:#fff;
}
.jiesuan{
  width:30%;
  height:100%;
  background:orange;
  text-align: center;
  line-height: 100rpx;
}